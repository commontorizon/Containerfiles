ARG BASE_REGISTRY=
ARG BASE_IMAGE_ARM=
ARG BASE_IMAGE_ARM64=
ARG BASE_IMAGE_AMD64=
ARG BASE_VERSION=
ARG GPU=
ARG BASE_GPU=

FROM ${BASE_REGISTRY}${BASE_IMAGE_ARM}${BASE_GPU}:${BASE_VERSION} AS arm
FROM ${BASE_REGISTRY}${BASE_IMAGE_ARM64}${BASE_GPU}:${BASE_VERSION} AS arm64
FROM ${BASE_REGISTRY}${BASE_IMAGE_AMD64}${BASE_GPU}:${BASE_VERSION} AS amd64

ARG TARGETARCH

FROM ${TARGETARCH}
